<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->

        <!-- Tips Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:background="@drawable/bg_header"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Logo -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/logo_relife" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="8dp"
                    android:text="RE-LIFE"
                    android:textColor="#FFFFFF"
                    android:textSize="100px" />

                <!-- Profile Button -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@id/btnProfil"
                    android:contentDescription="Profile"
                    android:padding="4dp"
                    android:src="@drawable/default_profile" />
            </LinearLayout>

            <!-- Welcome Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="25dp"
                android:text="Halo, Budi"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:text="Ayo Mulai Mengumpulkan Sampah"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button -->
            <Button
                android:id="@+id/btnKumpulkanSampah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Kumpulkan Sampah"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Dan Informasi Mengelola Sampah"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp" />

        <!-- Tips Card: Sampah Daur Ulang -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:onClick="handleClick">

            <!-- Background Gambar dengan Rounded Corners -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_tips"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true" />


            <!-- Text di Atas Gambar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sampah Daur Ulang"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- Tips Card: Sampah Non-Daur Ulang -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:onClick="handleClick">

            <!-- Background Gambar -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_tips"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true" />

            <!-- Text di Atas Gambar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sampah Non-Daur Ulang"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center" />
        </FrameLayout>


        <!-- Statistics Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Seberapa Jauh kamu Berpartisipasi!!!"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_statistic"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Total Sampah : 2500 Kg"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Sampah dikumpulkan/bulan: 250"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Bottom Navigation -->


    </LinearLayout>
</ScrollView>
