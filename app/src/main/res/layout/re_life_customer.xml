<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Bagian Header: Tombol Back dan Judul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_tips"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_tips"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Back Icon"
                android:padding="8dp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="RE-Life"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bg_title"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:text="Pesan Layanan Pengumpulan Sampah ke Bank Sampah dengan Mudah â€“ Bersihkan Rumah, Jaga Lingkungan Bersama Re-Life!"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/back_relife"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="relife_page_icon"
                android:src="@drawable/icon_relife_page" />

        </LinearLayout>
    </LinearLayout>

    <!-- Layout Detail Alamat -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_detail"
        android:padding="16dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:clipToPadding="false">

        <TextView
            android:text="Buat Pesanan Anda"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Alamat Lengkap"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/alamatLengkap"
            android:hint="Isikan Alamat Lengkap Anda"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border"
            android:textColor="@color/black"/>

        <TextView
            android:text="Detail Alamat"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/addressDetails"
            android:hint="Isikan Detail Alamat Anda"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/rounded_border"
            android:textColor="@color/black"/>

        <TextView
            android:text="Nama Lengkap"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:contentDescription="Nama Lengkap"
            android:layout_marginTop="5dp"
            android:id="@+id/namaLengkap"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border"
            android:textColor="@color/black"/>

        <TextView
            android:text="Nomor Telfon"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:contentDescription="Nomor Telfon"
            android:layout_marginTop="5dp"
            android:id="@+id/nomorTelfon"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border"
            android:textColor="@color/black"/>

        <!-- Tombol Pesan Sekarang -->
        <Button
            android:id="@+id/messageButton"
            android:text="Pesan Sekarang"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_kumpul"
            android:textColor="#000000"
            android:layout_marginTop="26dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>