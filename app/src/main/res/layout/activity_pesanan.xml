<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back Icon"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pesanan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/hijau_gelap"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedang Berlangsung"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/tv_beratnon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berat Sampah Non-Daur Ulang(/kg) :"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etBeratNonDaur"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukkan nilai"
                    android:padding="10dp"
                    android:background="@color/text_field"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/tv_beratdaur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berat Sampah Daur Ulang(/kg) :"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etBeratDaur"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukkan nilai"
                    android:padding="10dp"
                    android:background="@color/text_field"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaksi :"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_field">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_total_harga_daur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Harga Sampah Daur Ulang yang dijual :"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp" />
                        <TextView
                            android:id="@+id/tv_harga_jasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="Total Harga jasa Pengumpulan Sampah :"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp" />
                        <TextView
                            android:id="@+id/tv_total_keseluruhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="Total Keseluruhan :"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnPesanan"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/hijau_telur"
                    app:cornerRadius="30dp"
                    android:padding="10dp"
                    android:text="Ambil"
                    android:textAllCaps="false"
                    android:textColor="@color/hijau_gelap"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
