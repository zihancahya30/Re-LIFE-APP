<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Nama Customer -->
    <TextView
        android:id="@+id/nama_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Customer"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_back"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Alamat Pesanan -->
    <TextView
        android:id="@+id/alamat_pesanan_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alamat Pesanan"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nama_customer"
        app:layout_constraintEnd_toStartOf="@id/iv_back"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Nomor Telepon -->
    <TextView
        android:id="@+id/telepon_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alamat_pesanan_text"
        app:layout_constraintEnd_toStartOf="@id/iv_back"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Ikon panah untuk navigasi -->
    <ImageView
        android:id="@+id/ic_next_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_next_arrow"
        android:contentDescription="Navigasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
